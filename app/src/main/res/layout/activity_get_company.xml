<!-- activity_get_company.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextCompanyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:hint="Enter Company ID" />

    <Button
        android:id="@+id/buttonDisplayDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Details"
        android:layout_below="@+id/editTextCompanyId"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonDisplayDetails"/>

</RelativeLayout>
