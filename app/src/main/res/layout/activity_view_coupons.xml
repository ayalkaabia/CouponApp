<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TransActivity">

    <!-- Add these elements to your layout file -->


    <EditText
        android:id="@+id/etcompanyID"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:hint="Filter By Company Id"
        android:inputType="numberDecimal"
        android:textColor="#FAF7F7"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCouponId"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:hint="Filter By Coupon Id"
        android:inputType="numberDecimal"
        android:shadowColor="#000000"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/etcompanyID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etcompanyID" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="return "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="155dp" />

    <Button
        android:id="@+id/purchaseNew_btn"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:text="Add Coupon"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="155dp" />

    <Button
        android:id="@+id/minPrice_btn"
        android:layout_width="89dp"
        android:layout_height="60dp"
        android:text="min Price"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:id="@+id/maxPrice_btn"
        android:layout_width="87dp"
        android:layout_height="61dp"
        android:text="max Price"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="8dp" />

    <ListView
        android:id="@+id/couponListView"
        android:layout_width="407dp"
        android:layout_height="483dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/chooseCate_radio"
        android:layout_width="134dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="269dp">

        <Button
            android:id="@+id/choose_food_btn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="FOOD" />

        <Button
            android:id="@+id/choose_elec_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="ELECTRICITY" />

        <Button
            android:id="@+id/choose_rest_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="RESTAURANT" />

        <Button
            android:id="@+id/choose_vac_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="VACATION" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>