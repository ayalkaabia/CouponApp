<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TransActivity">

    <!-- Add these elements to your layout file -->


    <EditText
        android:id="@+id/purchase_etMaxPrice"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:hint="Filter By Company Id"
        android:inputType="numberDecimal"
        android:textColor="#FAF7F7"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchase_maxPrice_btn" />

    <Button
        android:id="@+id/purchase_returnButton"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="return "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/purchase_maxPrice_btn"
        android:layout_width="87dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:text="max Price"
        app:layout_constraintEnd_toStartOf="@+id/chooseCate_radio"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/purchase_couponListView"
        android:layout_width="407dp"
        android:layout_height="483dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/chooseCate_radio"
        android:layout_width="134dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="269dp">

        <Button
            android:id="@+id/purchase_choose_food_btn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="FOOD" />

        <Button
            android:id="@+id/purchase_choose_elec_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="ELECTRICITY" />

        <Button
            android:id="@+id/purchase_choose_rest_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="RESTAURANT"
            android:textSize="12sp" />

        <Button
            android:id="@+id/purchase_choose_vac_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="VACATION" />
    </RadioGroup>

    <Button
        android:id="@+id/purchase_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/purchase_unFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnFilter"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="170dp" />

</androidx.constraintlayout.widget.ConstraintLayout>