<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".viewCouponsActivity">



    <EditText
        android:id="@+id/view_etMaxPrice"
        android:layout_width="172dp"
        android:layout_height="43dp"
        android:layout_marginTop="80dp"
        android:hint="maxPriceEt"
        android:inputType="numberDecimal"
        android:textColor="#FAF7F7"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_returnButton"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="return "
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/view_filter"
        tools:layout_editor_absoluteY="176dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/purchase_couponListView"
        android:layout_width="407dp"
        android:layout_height="483dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/chooseCate_radio"
        android:layout_width="134dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="269dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/purchase_choose_food_btn"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:text="FOOD" />

        <Button
            android:id="@+id/purchase_choose_elec_btn"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:text="ELECTRICITY" />

        <Button
            android:id="@+id/purchase_choose_rest_btn"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:text="RESTAURANT"
            android:textSize="12sp" />

        <Button
            android:id="@+id/purchase_choose_vac_btn"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:text="VACATION" />
    </RadioGroup>

    <Button
        android:id="@+id/view_filter"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:text="Filter"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="176dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/view_unFilter"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:text="UnFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/view_returnButton"
        tools:layout_editor_absoluteY="176dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/selsct_price_txt"
        android:layout_width="174dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Select the maximum price"
        app:layout_constraintBottom_toTopOf="@+id/view_etMaxPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696" />

</androidx.constraintlayout.widget.ConstraintLayout>