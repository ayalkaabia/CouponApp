<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_bgLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_dynamic_neutral60"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/coupon_tvTitle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coupon_tvDescription"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvPrice"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coupon_tvStartDate"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvEndDate"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- Add other attributes here -->

    <TextView
        android:id="@+id/coupon_tvCompanyID"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvCategory"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvAmount"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvImage"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tvID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>